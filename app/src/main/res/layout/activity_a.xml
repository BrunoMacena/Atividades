<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    tools:context="br.usjt.ads.desmob.atividades.ActivityA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Activity_a"
        android:gravitu="center/horizontal"
        android:textSize="@dimen/font_large"
        android:textColor="@color/light_blue"
        android:padding="16dp" />

        <relativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btn_start_b"
                android:layout_width="wrap_content"
                android:layout_heigth="wrap_content"
                android:text="@string/btn_start_b_label"
                android:onClick="startAcitivityB" />

            <Button
                android:id="@+id/btn_start_c"
                android:layout_width="wrap_content"
                android:layout_heigth="wrap_content"
                android:text="@string/btn_start_c_label"
                android:layout_toRightOf="@id/btn_start_b"
                android:onClick="startAcitivityC" />

            <Button
                android:id="@+id/btn_finish_a"
                android:layout_width="wrap_content"
                android:layout_heigth="wrap_content"
                android:text="@string/btn_finish_a_label"
                android:layout_toRightOf="@id/btn_start_c"
                android:onClick="finishAcitivityA" />

            <Button
                android:id="@+id/btn_start_dialog"
                android:layout_width="wrap_content"
                android:layout_heigth="wrap_content"
                android:text="@string/btn_atart_dialog_label"
                android:layout_toRightOf="@id/btn_finish_a"
                android:onClick="startDialog" />


        </relativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_heigth="wrap_content"
        android:textSize="@dimen/font_medium"
        android:text_color="@color/ligth_blue" />

    <ScrollView
        android:layoutwidth="match_parent"
        android:layout_height="160dp">
        <TextView
            android:id="@+id/status_view_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroun="@color/white"
            android:textColor="@color/black"
            android:padding="4dp"
            android:typeface="monospace"
            />

    </ScrollView>

</LinearLayout>
